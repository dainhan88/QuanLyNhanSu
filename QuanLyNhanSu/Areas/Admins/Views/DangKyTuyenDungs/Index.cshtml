@model IEnumerable<QuanLyNhanSu.Models.DangKyTuyenDung>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admins/Views/Shared/_LayoutADM.cshtml";
}

<h2>Danh Sách Đăng Ký Tuyển Dụng</h2>

<p>
    <a href="/DangKyTuyenDungs/Create" class="btn-danger btn">Thêm Mới</a>
</p>
<table class="table">
    <tr class="label-DKTD">
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.GioiTinh)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.TrinhDoHocVan)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Gmail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ViTriUngTuyen)
        </th>
        <th>
            Kinh Nghiệm
        </th>
        <th>
            Hỗ Trợ
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.GioiTinh)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.TrinhDoHocVan)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Gmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ViTriUngTuyen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KinhNghiem)
            </td>
            <td>
                <a href="/DangKyTuyenDungs/Edit/@item.ID" class="btn-success btn">Sửa</a> |
                <a href="/DangKyTuyenDungs/Details/@item.ID" class="btn-primary btn">Chi tiết</a> |
                <a href="/DangKyTuyenDungs/Delete/@item.ID" class="btn-danger btn">Xóa</a>
            </td>
        </tr>
    }

</table>
<style>
    .label-DKTD {
        background-color: rgb(50 112 181);
        color: white;
        font-weight: 600;
    }

    table, th, td {
        border: 1px solid black;
        text-align: center;
    }
</style>

