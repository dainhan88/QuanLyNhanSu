@model QuanLyNhanSu.Models.Account

@{
    ViewBag.Title = "Change_passwordADM";
    Layout = "~/Areas/Admins/Views/Shared/_LayoutADM.cshtml";
}

<h2>Đổi Mật Khẩu</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Điền Mật Khẩu Mới</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <input type="text" name="UseName" hidden value="@Model.UseName" />
        <input type="text" name="RoleID" hidden value="@Model.RoleID" />
        <label>Mật khẩu mới</label>
        <input type="text" name="PassWord" id="PassWord" value="" />
        <input type="submit" value="Lưu" class="text-white btn btn-round btn-primary text-white handle-btn" />
    </div>
}

<div>
    <a href="~/Admins/HomeAdmin/Index" class="btn-danger btn"> Quay Lại</a>
</div>
