@using Microsoft.AspNet.Identity;
@if (Request.IsAuthenticated)
{
    var user = System.Web.HttpContext.Current.User.Identity.GetUserName();
    <li class="my-account">
        <a class="nav-link">Xin Chào @user !!! </a>
        <div class="acc-option-wrap">
            <a href="~/Admins/AccountsADM/Change_password_ADM/@user" class="acc-op-link f-600">Đổi mật khẩu</a>
            <a href="~/Admins/AccountsADM/Register" class="acc-op-link f-600">Đăng Ký Tài Khoản</a>
            <a href="/Accounts/Logout" class="acc-op-link f-600">Đăng xuất</a>
        </div>
    </li>    
}
else
{
    <li>
        <a href="~/Accounts/Login" class="nav-link">Đăng Nhập</a>
    </li>
}

<style>
    .my-account {
        position: relative;
    }

    .acc-op-link + .acc-op-link {
        margin-top: 8px;
    }

    .acc-op-link {
        text-decoration:none;
        color:blue;
        font-size:18px;
    }

    .acc-op-link:hover {
        text-decoration:none;
    } 

    .acc-option-wrap {
        display: none;
        position: absolute;
        flex-direction: column;
        min-width: 200px;
        top: calc(100% + 10px);
        right: 0;
        background-color: white;
        box-shadow: 0 1px 3px #ccc;
        padding: 8px 12px;
        transform-origin: calc(100% - 10px) top;
        animation: grownoti linear 0.156s;
    }

        .acc-option-wrap::after {
            content: "";
            position: absolute;
            border-width: 18px 21px;
            border-style: solid;
            right: 0px;
            top: -29px;
            border-color: transparent transparent white transparent;
        }

        .acc-option-wrap::before {
            content: "";
            position: absolute;
            width: 100%;
            height: 10px;
            top: -10px;
        }

    .my-account:hover .acc-option-wrap {
        display: flex;
    }

    #mainnav > ul > li > a.hello-acc {
        line-height: 65px;
    }

    @@keyframes grownoti {
        from {
            opacity: 0;
            transform: scale(0);
        }

        to {
            opacity: 1;
            transform: scale(1);
        }
    }
</style>